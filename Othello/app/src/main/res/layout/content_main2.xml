                    android:src="@drawable/transparent"/>
                <ImageButton
                    android:tag="64"
                    android:id="@+id/imageButton64"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:background="@layout/chess_button"
                    android:layout_marginLeft="1dp"
                    android:scaleType="centerInside"
                    android:onClick="onClickForButton"
                    android:src="@drawable/transparent"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:layout_marginTop="50dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:src="@drawable/black_chess"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/number_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":2"
                android:textSize="25sp"
                android:textColor="#444444"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/white_chess"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/number_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":2"
                android:textSize="25sp"
                android:textColor="#444444"/>
            <TextView
                android:id="@+id/TurnString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn:"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="#444444"/>
            <ImageView
                android:id="@+id/turn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/black_chess"
                android:layout_gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
